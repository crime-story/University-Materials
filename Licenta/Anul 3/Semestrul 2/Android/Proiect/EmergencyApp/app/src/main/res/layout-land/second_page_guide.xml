<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccffff"
    tools:context=".activities.GuidePage2">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/map" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:padding="10dp"
        android:text="@string/we_got_you"
        android:textColor="#6666ff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/second_page_guide_message"
        android:textColor="#6666ff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ThirdPageButtonSkip"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="205dp"
        android:text="@string/skip" />

    <Button
        android:id="@+id/ThirdPageButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="670dp"
        android:layout_marginTop="205dp"
        android:text="@string/next" />

</RelativeLayout>
